<?xml version="1.0" encoding="utf-8"?>

<record id="task_view_form" model="ir.ui.model">
	<field name="name">task.view.form</field>
	<field name="model">task</field>
	<field name="arch" type="xml">
		<form string="task">
			<header>
		            <field name="state" widget='statusbar'/>
			</header>
			<sheet>
		            <field name="name"/>
		            <field name="date_start"/>
		            <field name="date_end"/>
		        </sheet>
		</form>
	</field>
</record>

<record id="task_view_tree" model="ir.ui.model">
	<field name="name">task.view.tree</field>
	<field name="model">task</field>
	<field name="arch" type="xml">
		<tree string="task tree">
			<field name="name"/>
			<field name="date_start"/>
			<field name="date_end"/>
			<field name="state"/>
		</tree>
	</field>
</record>

<record id="task_view_graph" model="ir.ui.model">
	<field name="name">task.view.graph</field>
	<field name="model">task</field>
	<field name="arch" type="xml">
		<graph string="tasks">
			<field name="name"/>
			<field name="date_start"/>
			<field name="date_end"/>
		</graph>
	</field>
